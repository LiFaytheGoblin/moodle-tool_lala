<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/laaudit/db" VERSION="20230328" COMMENT="XMLDB file for Moodle admin/tool/laaudit"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="tool_laaudit_model_configs" COMMENT="Model configurations (immutable model properties) derived from analytics_models">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="modelid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="versions" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Versions of the model configuration, e.g. with different time-splitting method etc." />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="modelid" TYPE="unique" FIELDS="modelid"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="tool_laaudit_model_versions" COMMENT="Versions of model configurations">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="default" SEQUENCE="false" COMMENT="Name of the model version, 'default' if version was created automatically"/>
                <FIELD NAME="timecreationstarted" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timecreationfinished" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="analysisinterval" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="predictionsprocessor" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="contextids" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="indicators" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="configid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="configid" TYPE="foreign" FIELDS="configid" REFTABLE="tool_laaudit_model_configs" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
