{{!
    @template tool_lala/create_model_version_button
    Template for model version create button.
    Context variables required for this template:
    - id: int - model config unique identifier
    - sesskey: string
    Example context (json):
    {
            "id": 1,
            "sesskey": 'somesessionkey',
    }
}}
<form class="input-group mb-3 form-row col" action="modelversion.php" method="POST">
    <div class="input-group-prepend">
        <button class="btn btn-outline-secondary" type="submit">{{#str}}createversion, tool_lala{{/str}}</button>
    </div>
    <input type="hidden" name="configid" value="{{id}}" />
    <input type="hidden" name="sesskey" value="{{sesskey}}" />
    <label for="auto" class="sr-only">create version automatically or manually</label>
    <select class="custom-select" id="auto" name="auto">
        <option selected value=true>automatically</option>
        <option value=false>manually</option>
    </select>
</form>