{{!
    @template tool_lala/evidence_set
    Template for evidence_set.
    Context variables required for this template:
    - id: 1
    - name: "training data"
    - tablename: "course"
    - timecollectionstarted: "1679987403"
    - timecollectionfinished: "1679987953"
    - serializedfilelocation: "/evidencecollections/1"
    Example context (json):
    {
        "id": 1,
        "name": "training data",
        "tablename": "course",
        "timecollectionstarted": "1679987403",
        "timecollectionfinished": "1679987953",
        "serializedfilelocation": "/evidencecollections/1"
      }
}}
<li class="col-sm-4 pb-3 px-2">
        <ul class="border rounded small bg-white h-100 list-unstyled p-2">
            <li>
                <a href="{{serializedfilelocation}}" title="Download from {{serializedfilelocation}}">
                    <dl class="row mb-0">
                        <dt  class="mb-0 col-1">
                            <i class="icon fa fa-download" aria-hidden="true" title="{{#str}}serializedfilelocation, tool_lala{{/str}}"></i>
                        </dt>
                        <dd  class="m-0 col">
                            {{name}} {{#tablename}}({{tablename}}){{/tablename}}
                        </dd>
                    </dl>
                </a>
            </li>
            <li>
                <dl class="row mb-0">
                    <dt  class="mb-0 col-1">
                        <i class="icon fa fa-hourglass-start" title="{{#str}}started, tool_lala{{/str}}"></i>
                    </dt>
                    <dd  class="m-0 col">
                        {{timecollectionstarted}}
                    </dd>
                </dl>
            </li>
            <li>
                <dl class="row mb-0">
                    <dt  class="mb-0 col-1">
                        <i class="icon fa fa-hourglass-end" title="{{#str}}finished, tool_lala{{/str}}"></i>
                    </dt>
                    <dd  class="mb-0 col">
                        {{timecollectionfinished}}
                    </dd>
                </dl>
            </li>
        </ul>
</li>