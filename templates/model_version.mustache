{{!
    @template tool_lala/evidence_set
    Template for evidence_set.
    Context variables required for this template:
    - id
    - name
    - description: [{}]
    - evidence: [{}]
    Example context (json):
    {
        "id": 1,
        "name": "default",
        "description": [{
            "id": 1,
            "name": "default",
            "timecreationstarted": "1679987403",
            "contextids": [1, 2, 3],
            "timecreationfinished": null,
            "timecreationfinishedicon": 'half',
            "traintestsplit": "Train: 80%, Test: 20%",
            "haserror": false,
            "errormessage": "some error description",
        }],
        "evidence": [{
            "id": 1,
            "name": "training data",
            "timecreationstarted": "1679987403",
            "timecreationfinished": "1679987953",
            "serializedfilelocation": "/evidencecollections/1"
        }]
      }
}}
<section aria-label="version{{id}}">
    <h4>
        <span title="{{#str}}version, tool_lala{{/str}}" id="version{{id}}">{{name}}</span>
        <span class="badge rounded-pill bg-light ml-2 position-absolute start-0" title="{{#str}}versionid, tool_lala{{/str}}">
           <i class="icon fa fa-key" aria-hidden="true"></i>{{id}}
        </span>
    </h4>

    {{#description}}
        {{> tool_lala/model_version_description}}
    {{/description}}

    <div class="w-100 text-dark bg-secondary rounded-bottom px-1 text-center position-relative mb-2">
        <a class="collapse multi-collapse show multi-collapseevidence{{id}} stretched-link" data-toggle="collapse" data-target=".multi-collapseevidence{{id}}" role="button" aria-expanded="false" aria-controls="evidence{{id}} moreevidence{{id}} lessevidence{{id}}" id="moreevidence{{id}}">
            display evidence
        </a>
    </div>
    <div class="w-100 text-dark bg-secondary rounded-top px-1 text-center position-relative mb-2">
        <a class="collapse multi-collapse hide multi-collapseevidence{{id}} stretched-link" data-toggle="collapse" data-target=".multi-collapseevidence{{id}}" role="button" aria-expanded="true" aria-controls="evidence{{id}} moreevidence{{id}} lessevidence{{id}}" id="lessevidence{{id}}">
            hide evidence
        </a>
    </div>

    <div class="container mx-0 mb-3 collapse multi-collapse multi-collapseevidence{{id}}" id="evidence{{id}}">
        <ul class="row row-cols-3 list-unstyled">
            {{#evidence}}
                {{> tool_lala/evidence_item}}
            {{/evidence}}
        </ul>
    </div>

