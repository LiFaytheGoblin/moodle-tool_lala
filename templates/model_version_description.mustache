{{!
    @template tool_laaudit/evidence_set
    Template for evidence_set.
    Context variables required for this template:
    - id
    - name
    - timecreationstarted
    - indicators
    - analysisinterval
    - predictionsprocessor
    - contextids
    - timecreationfinished
    Example context (json):
    {
            "id": 1,
            "name": "AutoSet",
            "timecreationstarted": "1679987403",
            "indicators": ["someindicator"],
            "analysisinterval": "quarters",
            "predictionsprocessor": "php",
            "contextids": [1, 2, 3],
            "timecreationfinished": null
      }
}}
<h5><small>{{name}}</small></h5>
<div class="bg-light p-3 rounded small">
    <ul class="p-0 list-unstyled list-group list-group-horizontal">
        <li class="col-sm-4">
            <dl class="row mb-0">
                <dt  class="mb-0">
                    <i class="icon fa fa-hourglass-start" aria-hidden="true" title="{{#str}}started, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0">
                    {{timecreationstarted}}
                </dd>
            </dl>
        </li>
        <li class="col-sm">
            <dl class="row mb-0">
                <dt  class="mb-0">
                    <i class="icon fa fa-hourglass-end" aria-hidden="true" title="{{#str}}finished, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0">
                    {{timecreationfinished}}
                </dd>
            </dl>
        </li> <!-- Todo: only if available? -->
    </ul>
    <ul class="p-0 list-unstyled list-group list-group-horizontal">
        <li class="col-sm-4">
            <dl class="row  mb-0">
                <dt   class="mb-0">
                    <i class="icon fa fa-server" aria-hidden="true" title="{{#str}}predictionsprocessor, tool_laaudit{{/str}}"></i>
                </dt>
                <dd   class="mb-0">
                    {{predictionsprocessor}}
                </dd>
            </dl>
        </li>
        <li class="col-sm">
            <dl class="row  mb-0">
                <dt  class="mb-0">
                    <i class="icon fa fa-arrows-h" aria-hidden="true" title="{{#str}}analysisinterval, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0">
                    {{analysisinterval}}
                </dd>
            </dl>
        </li>
    </ul>
    <ul>
        <li>
            <dl class="row  mb-0">
                <dt class="mb-0">
                    <i class="icon fa fa-graduation-cap" aria-hidden="true" title="{{#str}}contexts, tool_laaudit{{/str}}"></i>
                </dt>
                <dd class="mb-0">
                    {{contextids}}
                </dd>
            </dl>
        </li>
        <dl class="row  mb-0">
            <dt class="mb-0">
                <i class="icon fa fa-bar-chart" aria-hidden="true" title="{{#str}}indicators, tool_laaudit{{/str}}"></i>
            </dt>
            <dd class="mb-0">
                {{indicators}}
            </dd>
        </dl>
    </ul>
</div>
