{{!
    @template tool_laaudit/evidence_set
    Template for evidence_set.
    Context variables required for this template:
    - id
    - name
    - timecreationstarted
    - indicators
    - analysisinterval
    - predictionsprocessor
    - contextids
    - timecreationfinished
    - timecreationfinishedicon
    Example context (json):
    {
            "id": 1,
            "name": "AutoSet",
            "timecreationstarted": "1679987403",
            "indicators": ["someindicator"],
            "analysisinterval": "quarters",
            "predictionsprocessor": "php",
            "contextids": [1, 2, 3],
            "timecreationfinished": null,
            timecreationfinishedicon: 'half'
      }
}}
<h4>{{#str}}version, tool_laaudit{{/str}} {{id}}: {{name}}</h4>
<div class="bg-light p-3 rounded small mb-1 mx-0">
    <ul class="p-0 list-unstyled list-group list-group-horizontal">
        <li class="col-sm-5">
            <dl class="row mb-0">
                <dt  class="mb-0">
                    <i class="icon fa fa-hourglass-start col-sm-0" aria-hidden="true" title="{{#str}}started, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0 px-1 col-sm">
                    {{timecreationstarted}}
                </dd>
            </dl>
        </li>
        <li class="col-sm">
            <dl class="row mb-0">
                <dt  class="mb-0 col-sm-0">
                    <i class="icon fa fa-hourglass-{{timecreationfinishedicon}}" aria-hidden="true" title="{{#str}}finished, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0 px-1 col-sm">
                    {{timecreationfinished}}
                </dd>
            </dl>
        </li> <!-- Todo: only if available? -->
    </ul>
    <ul class="p-0 list-unstyled list-group list-group-horizontal">
        <li class="col-sm-5">
            <dl class="row  mb-0">
                <dt   class="mb-0 col-sm-0">
                    <i class="icon fa fa-server" aria-hidden="true" title="{{#str}}predictionsprocessor, tool_laaudit{{/str}}"></i>
                </dt>
                <dd   class="mb-0 px-1 col-sm">
                    {{predictionsprocessor}}
                </dd>
            </dl>
        </li>
        <li class="col-sm">
            <dl class="row  mb-0">
                <dt  class="mb-0 col-sm-0">
                    <i class="icon fa fa-arrows-h" aria-hidden="true" title="{{#str}}analysisinterval, tool_laaudit{{/str}}"></i>
                </dt>
                <dd  class="mb-0 px-1 col-sm">
                    {{analysisinterval}}
                </dd>
            </dl>
        </li>
    </ul>
    <ul>
        <li>
            <dl class="row  mb-0">
                <dt class="mb-0 col-sm-0">
                    <i class="icon fa fa-graduation-cap" aria-hidden="true" title="{{#str}}contexts, tool_laaudit{{/str}}"></i>
                </dt>
                <dd class="mb-0 px-1 col-sm">
                    {{contextids}}
                </dd>
            </dl>
        </li>
        <dl class="row  mb-0">
            <dt class="mb-0 col-sm-0">
                <i class="icon fa fa-bar-chart" aria-hidden="true" title="{{#str}}indicators, tool_laaudit{{/str}}"></i>
            </dt>
            <dd class="mb-0 px-1 col-sm">
                {{indicators}}
            </dd>
        </dl>
    </ul>
</div>
