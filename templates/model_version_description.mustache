{{!
    @template tool_laaudit/evidence_set
    Template for evidence_set.
    Context variables required for this template:
    - timecreationstarted
    - traintestsplit
    - contextids
    - timecreationfinished
    - timecreationfinishedicon
    - haserror
    - errormessage
    Example context (json):
    {
            "timecreationstarted": "1679987403",
            "traintestsplit": "Train: 80%, Test: 20%",
            "contextids": [1, 2, 3],
            "timecreationfinished": null,
            "timecreationfinishedicon": 'half',
            "haserror": false,
            "errormessage": "some error description",
      }
}}
<div class="bg-light p-3 rounded small mb-1 mx-0">
    <ul class="p-0 list-unstyled list-group list-group-horizontal">
        <li class="col-sm-5" title="{{#str}}started, tool_laaudit{{/str}}">
            <dl class="row mb-0">
                <dt  class="mb-0">
                    <i class="icon fa fa-hourglass-start col-sm-0" aria-hidden="true"></i>
                </dt>
                <dd  class="mb-0 px-1 col-sm">
                    {{timecreationstarted}}
                </dd>
            </dl>
        </li>
        <li class="col-sm" title="{{#str}}finished, tool_laaudit{{/str}}">
            <dl class="row mb-0">
                <dt  class="mb-0 col-sm-0">
                    <i class="icon fa fa-hourglass-{{timecreationfinishedicon}}" aria-hidden="true"></i>
                </dt>
                <dd  class="mb-0 px-1 col-sm">
                    {{timecreationfinished}}
                </dd>
            </dl>
        </li>
    </ul>
    <ul class="pl-3">
        <li class="row mb-0 ml-0" title="{{#str}}traintestsplit, tool_laaudit{{/str}}">
            <dl class="row mb-0">
                <dt class="mb-0 col-sm-0">
                    <i class="icon fa fa-pie-chart" aria-hidden="true"></i>
                </dt>
                <dd class="mb-0 px-1 col-sm">
                    {{traintestsplit}}
                </dd>
            </dl>
        </li>
        <li class="row mb-0 ml-0" title="{{#str}}contexts, tool_laaudit{{/str}}">
            <dl class="row mb-0">
                <dt class="mb-0 col-sm-0">
                    <i class="icon fa fa-graduation-cap" aria-hidden="true"></i>
                </dt>
                <dd class="mb-0 px-1 col-sm">
                    {{contextids}}
                </dd>
            </dl>
        </li>
        {{#haserror}}
            <li class="row mb-0  ml-0" title="{{#str}}error, tool_laaudit{{/str}}">
                <dl class="row mb-0 text-danger">
                    <dt class="mb-0 col-sm-0">
                        <i class="icon fa fa-exclamation-circle" aria-hidden="true"></i>
                    </dt>
                    <dd class="mb-0 px-1 col-sm">
                        {{errormessage}}
                    </dd>
                </dl>
            </li>
        {{/haserror}}
    </ul>
</div>



